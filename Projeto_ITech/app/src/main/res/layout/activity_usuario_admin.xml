<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="dadm.quixada.ufc.projeto_itech.Usuario.UsuarioAdmin">

    <ImageView
        android:id="@+id/iconePrincipal"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/ic_pc"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <View
        android:id="@+id/container"
        style="@style/ContainerComponents"
        android:layout_marginTop="88dp"
        app:layout_constraintEnd_toEndOf="@id/iconePrincipal"
        app:layout_constraintStart_toStartOf="@id/iconePrincipal"
        app:layout_constraintTop_toBottomOf="@+id/iconePrincipal"></View>

    <ImageView
        android:id="@+id/imgAcesso"
        android:layout_width="30dp"
        android:layout_height="40dp"
        android:rotation="180"
        android:src="@drawable/ic_exit_acess"
        app:layout_constraintEnd_toEndOf="@id/container"
        app:layout_constraintHorizontal_bias="0.03"
        app:layout_constraintStart_toStartOf="@id/container"
        app:layout_constraintTop_toTopOf="@id/container"></ImageView>

    <TextView
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="Acesso rÃ¡pido"
        android:textSize="25dp"
        app:layout_constraintEnd_toEndOf="@id/container"
        app:layout_constraintHorizontal_bias="0.315"
        app:layout_constraintStart_toStartOf="@id/container"
        app:layout_constraintTop_toTopOf="@id/container"></TextView>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnCad_Produto"
        android:layout_width="80dp"
        android:layout_height="73dp"
        android:layout_marginTop="80dp"
        android:background="@drawable/edit_text"
        android:text="Cad. Produto"
        android:textColor="@color/btn_cadastrar"
        android:drawableTop="@drawable/ic_add"
        android:drawablePadding="-10dp"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="@id/container"
        app:layout_constraintHorizontal_bias="0.033"
        app:layout_constraintStart_toStartOf="@id/container"
        app:layout_constraintTop_toTopOf="@id/container"
        ></androidx.appcompat.widget.AppCompatButton>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnListar_Agendamentos"
        android:layout_width="80dp"
        android:layout_height="73dp"
        android:layout_marginTop="80dp"
        android:background="@drawable/edit_text"
        android:text="List. Agendamentos"
        android:textColor="@color/btn_cadastrar"
        android:drawableTop="@drawable/ic_diary"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="@id/container"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="@id/container"
        app:layout_constraintTop_toTopOf="@id/container"
        ></androidx.appcompat.widget.AppCompatButton>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnListar_Produto"
        android:layout_width="80dp"
        android:layout_height="73dp"
        android:layout_marginTop="80dp"
        android:background="@drawable/edit_text"
        android:text="List. Produtos"
        android:textColor="@color/btn_cadastrar"
        android:drawableTop="@drawable/ic_car_shop"
        android:drawablePadding="-15dp"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="@id/container"
        app:layout_constraintHorizontal_bias="0.958"
        app:layout_constraintStart_toStartOf="@id/container"
        app:layout_constraintTop_toTopOf="@id/container"
        ></androidx.appcompat.widget.AppCompatButton>

    <View
        android:id="@+id/container02"
        style="@style/ContainerComponents"
        android:layout_width="349dp"
        android:layout_height="190dp"
        android:layout_marginTop="88dp"
        app:layout_constraintEnd_toEndOf="@id/container"
        app:layout_constraintStart_toStartOf="@id/container"
        app:layout_constraintTop_toBottomOf="@+id/container"></View>

    <ImageView
        android:id="@+id/imgAgendamento"
        android:layout_width="30dp"
        android:layout_height="40dp"
        android:rotation="180"
        android:src="@drawable/ic_view"
        app:layout_constraintEnd_toEndOf="@id/container02"
        app:layout_constraintHorizontal_bias="0.03"
        app:layout_constraintStart_toStartOf="@id/container02"
        app:layout_constraintTop_toTopOf="@id/container02"></ImageView>

    <TextView
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="Gerenciamento"
        android:textSize="25dp"
        app:layout_constraintEnd_toEndOf="@id/container02"
        app:layout_constraintHorizontal_bias="0.315"
        app:layout_constraintStart_toStartOf="@id/container02"
        app:layout_constraintTop_toTopOf="@id/container02"></TextView>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/telaProdutos"
        android:layout_width="120dp"
        android:layout_height="110dp"
        android:layout_marginTop="72dp"
        android:background="@drawable/edit_text"
        android:drawableTop="@drawable/ic_car_shop"
        android:padding="15dp"
        android:text="Produtos"
        android:textAllCaps="false"
        android:textSize="20dp"
        android:textColor="@color/btn_cadastrar"
        app:layout_constraintEnd_toEndOf="@id/container02"
        app:layout_constraintHorizontal_bias="0.116"
        app:layout_constraintStart_toStartOf="@id/container02"
        app:layout_constraintTop_toTopOf="@id/container02"></androidx.appcompat.widget.AppCompatButton>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/Agendamentos"
        android:layout_width="120dp"
        android:layout_height="110dp"
        android:layout_marginTop="72dp"
        android:background="@drawable/edit_text"
        android:drawableTop="@drawable/ic_diary"
        android:padding="10dp"
        android:text="Agendamentos"
        android:textAllCaps="false"
        android:textSize="20dp"
        android:textColor="@color/btn_cadastrar"
        app:layout_constraintEnd_toEndOf="@id/container02"
        app:layout_constraintHorizontal_bias="0.943"
        app:layout_constraintStart_toStartOf="@id/container02"
        app:layout_constraintTop_toTopOf="@id/container02"></androidx.appcompat.widget.AppCompatButton>


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/telaProdutos"
        app:menu="@menu/bottom_menu"></com.google.android.material.bottomnavigation.BottomNavigationView>

</androidx.constraintlayout.widget.ConstraintLayout>