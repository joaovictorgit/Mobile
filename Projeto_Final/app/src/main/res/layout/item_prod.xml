<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/view_prod"
    app:cardCornerRadius="15dp"
    app:cardElevation="5dp"
    app:contentPadding="10dp"
    app:cardUseCompatPadding="true"
    >

    <ImageView
        android:id="@+id/iconeProdutos"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_marginTop="22dp"
        android:layout_marginRight="10dp"
        />
    <TextView
        android:id="@+id/prod_nome"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:text="Nome"
        android:textSize="20dp"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="80dp"
        />

    <TextView
        android:id="@+id/prod_tipo"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_below="@+id/prod_nome"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="80dp"
        android:text="Tipo"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/prod_preco"
        android:layout_width="140dp"
        android:layout_height="40dp"
        android:layout_marginLeft="250dp"
        android:layout_marginTop="10dp"
        android:text="Preco"
        android:textSize="17dp" />

    <ImageView
        android:id="@+id/update"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginLeft="250dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/ic_update"
        android:rotation="180" />

    <ImageView
        android:id="@+id/delete"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginLeft="300dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/ic_delete"
        android:rotation="180" />

</androidx.cardview.widget.CardView>