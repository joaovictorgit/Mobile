<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/view_prod"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/view_prod"
    app:cardCornerRadius="15dp"
    app:cardElevation="5dp"
    app:contentPadding="10dp"
    app:cardUseCompatPadding="true"
    >

    <ImageView
        android:id="@+id/iconeProdutos"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/ic_list_agend"
        />
    <TextView
        android:id="@+id/agen_nome"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:text="Nome"
        android:textSize="20dp"
        android:layout_marginLeft="80dp"
        />

    <TextView
        android:id="@+id/agen_des"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_below="@+id/agen_nome"
        android:layout_marginLeft="80dp"
        android:text="Descrição"
        android:textSize="15dp"
        android:layout_marginTop="25dp"
        />

    <TextView
        android:id="@+id/agen_data"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginLeft="280dp"
        android:layout_marginTop="15dp"
        android:text="Data"
        android:textSize="15dp" />

    <ImageView
        android:id="@+id/iconCheck"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginLeft="300dp"
        android:layout_marginTop="40dp"
         />
</androidx.cardview.widget.CardView>